{
	"manifest_version": 3,
	"name": "허리 피자",
	"version": "1.0",
	"description": "허리 피자, 어깨 피자, 웃음 피자",
	"permissions": ["activeTab", "tabs", "windows"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"css": ["style.css"]
		}
	],
	"sidebar_action": {
		"default_panel": "sidebar.html",
		"default_icon": {
			"16": "images/icon16.png"
		}
	}
}
